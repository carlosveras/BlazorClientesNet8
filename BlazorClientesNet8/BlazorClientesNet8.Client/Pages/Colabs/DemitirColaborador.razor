@page "/demitircolaborador"
@page "/demitircolaborador/{Id:int}"
@using System.Net.Http.Json
@inject HttpClient httpClient

@rendermode InteractiveAuto

<MudDialog>
    <DialogContent>
        <MudText>Demitir o colaborador @colaboradorId</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Size="@Size.Small" Variant="Variant.Filled" OnClick="Cancel" Color="Color.Error">Cancel</MudButton>
        <MudButton Size="@Size.Small" Variant="Variant.Filled" OnClick="Submit" Color="Color.Success">Salvar</MudButton>
    </DialogActions>
</MudDialog>


@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
        
    [Parameter] public int colaboradorId { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}
